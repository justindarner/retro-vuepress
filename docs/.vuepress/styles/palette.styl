// showing default values
$accentColor = #276BCC;
$textColor = #2c3e50;
$borderColor = #eaecef;
$codeBgColor = #282c34;

.navbar {
  background-color: #000;
  box-shadow: 0 2px 2px 0 rgba(0, 0, 0, 0.14), 0 1px 5px 0 rgba(0, 0, 0, 0.12), 0 3px 1px -2px rgba(0, 0, 0, 0.2);
  border-bottom: inherit;

  .links  {
    background-color: #000;
  }
  .sidebar-button, .site-name, .nav-links, .nav-links a.router-link-active {
    color: white;
    & a:hover {
      color: $borderColor;
    }
  }
}
